<div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 mx-auto text-center p-5">
    <nav class="navbar navbar-expand-lg navbar-light navbar-right mb-2">
        <div class="container navbar-right">
            {{#if logged_in}}
            <button class="btn btn-danger btn-sm" id="logout">Logout</button>
            <a class="btn btn-info btn-sm" href="./csv">Download CSV</a>
            {{else}}
            <a class="btn btn-light btn-sm" href="/login">Admin Login</a>
            {{/if}}
        </div>
    </nav>

    <img class="logo mb-4" src="../img/WMtD.png">
    <h2 class="text-white mb-5">How much leave are you owed?</h2>

    <table id="table" class="table text-white">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Sector</th>
                <th scope="col">Union Member</th>
                <th scope="col">Shift Worker</th>
            </tr>
        </thead>
        <tbody>
            {{#each users as | user |}}
            <tr>
                <th scope="row">{{user.id}}</th>
                <td>{{user.name}} </td>
                <td>{{user.email}}</td>
                <td>{{user.sector}}</td>
                <td>{{user.union}}</td>
                <td>{{user.shift}}</td>
            </tr>

            {{/each}}
        </tbody>
    </table>


    <table id="table2" class="table text-white">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each users as | user |}}
            <tr>
                <th scope="row">{{user.id}}</th>
                <td>{{user.name}}</td>
                <td>{{user.email}}</td>
            </tr>

            {{/each}}
        </tbody>
    </table>